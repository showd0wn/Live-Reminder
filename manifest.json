{
  "manifest_version": 2,
  "name": "Live Reminder",
  "description": "开播提醒小助手",
  "version": "1.2.0",
  "icons": { "128": "images/icon128.png" },
  "permissions": [
    "*://*.douyu.com/*",
    "*://*.panda.tv/*",
    "*://*.zhanqi.tv/*",
    "*://*.huya.com/*",
    "*://*.huomao.com/*",
    "storage",
    "notifications",
    "background",
    "alarms",
    "cookies",
    "https://imspace.applinzi.com/*",
    "*://*.douyucdn.cn/*",
    "*://*.pdim.gs/*",
    "*://*.hdslb.com/*",
    "*://*.plures.net/*",
    "*://*.dwstatic.com/*",
    "*://*.jtvnw.net/*",
    "*://*.nimg.jp/*"
  ],
  "background": {
    "scripts": ["js/common.js", "js/background.js"]
  },
  "browser_action": {
    "default_title": "Live Reminder",
    "default_popup": "popup.html",
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    }
  },
  "options_ui": { "page": "options.html" }
}
